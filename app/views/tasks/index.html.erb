<h1>My tasks</h1>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary"%>

<ul>
<% @tasks.each do |task| %>

<li><%= task.completed ? '☑ ' : '☐ ' %>
  <%= link_to task.title.capitalize, task_path(task) %>
  <%= link_to "🗑️",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this task?" } %></li>
<% end %>
</ul>

